{
  "name": "@bee-learnt/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "seed": "tsx src/seed/seed.ts",
    "seed:curriculum": "tsx src/seed/seed-curriculum.ts",
    "seed:nsc-papers": "tsx src/seed/seed-nsc-papers.ts",
    "seed:resources": "tsx src/seed/seed-subject-resources.ts",
    "seed:all": "npm run seed && npm run seed:curriculum && npm run seed:nsc-papers && npm run seed:resources",
    "sync:neon-auth": "tsx src/seed/sync-neon-auth-users.ts",
    "fix:question-bank": "tsx src/seed/fix-question-bank.ts",
    "check:question-bank": "tsx src/seed/check-question-bank-columns.ts",
    "check:tables": "tsx src/seed/check-tables.ts",
    "check:env": "tsx src/seed/check-env.ts",
    "test:connection": "tsx src/seed/test-connection.ts",
    "test:schema-sync": "tsx src/seed/test-schema-sync.ts",
    "migrate:core": "tsx src/seed/migrate-core.ts",
    "migrate:fix-schema-mapping": "tsx src/seed/fix-schema-mapping.ts",
    "migrate:education-features": "tsx src/seed/migrate-education-features.ts",
    "migrate:advanced-features": "tsx src/seed/migrate-advanced-features.ts",
    "migrate:assessments": "tsx src/seed/migrate-assessments.ts",
    "migrate:nsc-curriculum": "tsx src/seed/migrate-nsc-curriculum.ts",
    "migrate:subject-resources": "tsx src/seed/migrate-subject-resources.ts",
    "migrate:all": "npm run migrate:core && npm run migrate:education-features && npm run migrate:advanced-features && npm run migrate:assessments && npm run migrate:nsc-curriculum && npm run migrate:subject-resources",
    "db:reset": "tsx src/seed/reset-db.ts && npm run migrate:all && npm run seed:all",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@sentry/node": "^10.38.0",
    "bcryptjs": "^2.4.3",
    "better-auth": "^1.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.41.0",
    "express": "^5.1.0",
    "jose": "^6.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.16",
    "openai": "^4.77.0",
    "socket.io": "^4.8.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "yaml": "^2.7.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.0.0",
    "@types/nodemailer": "^6.4.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.11",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "swagger-jsdoc": {
      "yaml": "2.7.0"
    }
  }
}
